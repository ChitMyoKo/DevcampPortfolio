<h1>Portfolio Page</h1>
<%= link_to "New Portfolio Item", new_portfolio_path %>
<% @portfolios.each do |portfolio| %>
  <p><%= portfolio.title %></p>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <p><%= image_tag portfolio.main_image unless portfolio.main_image.nil?%></p>
  <p><%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil?%></p>
  <p><%= link_to "Edit", edit_portfolio_path(portfolio.id)%></p>
  <%= button_to "Destroy this blog", portfolio, method: :delete %>
<% end %>
